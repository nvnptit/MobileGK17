<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"

    >




 <androidx.cardview.widget.CardView
     android:id="@+id/layout_item"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="8dp"
     android:elevation="4dp"

     app:cardCornerRadius="8dp">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#BC2A2A">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginEnd="10dp"
             android:layout_toStartOf="@+id/img_delete"
             android:text="Delete"
             android:textColor="@color/white"
             android:textSize="18sp"
             android:textStyle="bold" />


         <ImageView
             android:id="@+id/img_delete"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_centerVertical="true"
             android:layout_marginEnd="10dp"
             android:src="@drawable/baseline_delete_white_24" />
     </RelativeLayout>



     <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/layoutItem"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/img_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hinh1"></de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_user"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_congnhan"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvphanXuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/action_congnhan" />


        </LinearLayout>

    </LinearLayout>

 </androidx.cardview.widget.CardView>


</FrameLayout>